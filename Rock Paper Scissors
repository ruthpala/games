import random

while True:    

        actions = ["rock", "paper", "scissors"]

        "rock" > "scissors"

        "scissors" > "paper"

        "paper" > "rock"


        computer = random.choice(actions)
        print(computer)

        choice = input("Enter a choice - rock, paper or scissors? ")


        if computer > choice:
                print("You Lost!")
            
        elif computer == choice:
                print("Draw!")

        elif computer < choice:
                print("You Won!")

        if input("Try again? Y/N ") == "N":
                break
                
while computer == choice or computer > choice:
        
        input("Try again? Y/N ")        
       
else: input("Try again? Y/N ") == "N"
      
